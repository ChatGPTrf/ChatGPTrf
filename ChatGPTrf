<body>
    <div class="container">
        <h1>Рабочий сайт с нейросетью</h1>
        <input type="text" id="userInput" placeholder="Введите запрос">
        <button onclick="sendToAPI()">Отправить</button>
        <p id="response"></p>
    </div>
    <script>
        async function sendToAPI() {
            const userInput = document.getElementById('userInput').value;
            const apiKey = 'sk-a790e9eca25a469a87d133b5a581c6de'; // Твой API ключ
            const url = 'https://api.openai.com/v1/completions'; // URL API OpenAI

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${apiKey}`
                    },
                    body: JSON.stringify({
                        model: "text-davinci-003", // Укажи модель
                        prompt: userInput,
                        max_tokens: 150
                    })
                });

                const data = await response.json();
                document.getElementById('response').innerText = data.choices[0].text.trim();
            } catch (error) {
                console.error('Ошибка:', error);
                document.getElementById('response').innerText = 'Произошла ошибка при запросе к API.';
            }
        }
    </script>
</body>
